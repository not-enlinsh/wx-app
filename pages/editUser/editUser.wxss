/* pages/editUser/editUser.wxss */
.t1{
  height: 300rpx;
  background-color: #fff;
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom:46rpx; 
}
.t1 .changepic{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.t1 .changepic image{
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  justify-content: center;
  align-items: center;
}
.t1 .changepic text{
  color: #7f7f7f;
  font-size: 30rpx;
  align-items: center;
  justify-content: center;
  margin-top: 18rpx;
}


.t2{
  font-size: 38rpx;
  color: #474747;
  font-weight: 600;
  
}
.t2 .f-i-infor{
  /* height: 430rpx; */
  background-color: #fff;
  padding: 30rpx 50rpx 50rpx 50rpx;
  display: flex;
  margin-bottom: 30rpx;
  flex-direction: column;
  /* justify-content: space-between; */
  margin-top: 30rpx;
  border-radius: 20rpx;
}
.t2 .f-i-infor::last-child{
  margin-bottom: 0rpx;
}
.t2 .f-i-infor .row1{
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.t2 .f-i-infor .row1 view{ /*字*/
  width: 150rpx;
  font-size: 34rpx;
  color:#666666;
  font-weight: 500;
}
.t2 .f-i-infor .row1 input{
  border-bottom: 1px solid #f3f3f3;
  font-weight: 500;
  color:#666666;
  font-size: 34rpx;
  width: 70%;
  padding-left: 50rpx;
}

/* 保存按钮 */
.t3{
  width: 100%;
  height: 100rpx;
  margin-top: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 50rpx;
}
.t3 button{
  width: 100% !important;
  height: 100rpx;
  border-radius: 20rpx;
  background-color: #3BA8E4;
  color: #fff;
  font-weight: 500;
  font-size: 40rpx;
}