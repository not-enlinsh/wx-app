/* pages/reserveDetail/reserveDetail.wxss */
page{
  background: rgb(255, 255, 255);
}
.row{
  height: 200rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  margin: 30rpx 0;
}
.row .col{
  width: 440rpx;
  padding: 0 0 20rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 0;
}
.row .img{
  width: 240rpx;
  height: 180rpx;
  position: relative;
}
.row .img view{
  position: absolute;
  top: 0;
  /* width: 100rpx; */
  /* height: 40rpx; */
  border-bottom-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  background: rgba(24, 24, 24, 0.5);
  color: rgb(230, 230, 230);
  font-size: 24rpx;
  text-align: center;
  padding: 5rpx 20rpx;
}

.row image{
  width: 240rpx;
  height: 180rpx;
}
.row .bg{
  padding: 0;
  display: flex;
  justify-content: space-between;
  margin-bottom: 5rpx;
}
.bg .font1{
  width: 290rpx;
  font-size: 29rpx;
  color: #333333;
  overflow:hidden;
  text-overflow:ellipsis;
  word-break: normal;
  height: 74rpx;
   
}
.bg .font2{
  font-size: 32rpx;
  font-weight: 600;
  color:#f7bc46;
}
.bg .font4{
  font-size: 32rpx;
  color: #3BA8E4;
}

.font3{
  font-size: 28rpx;
  color:#727272;
}
.col .font3 text{
  font-size: 32rpx;
  color: #3d3d3d;
  font-weight: 500;
}

.row2{
  margin-top: 40rpx;
  border-top: 1px solid rgba(219, 219, 219, 0.932);
  
}
.row2 .font5{
  padding: 40rpx 0 30rpx 0;
  font-weight: 600;

}
.row2 .font3{
  font-size: 30rpx;
  padding: 10rpx 0;
  letter-spacing: 2rpx;
}
.row2 .font3 text{
  font-size: 36rpx;
  font-weight: 600;
  color: #F99B00;
}
.pinglun{
  width: 100%;
  background-color: rgba(59, 168, 228, 1);
  margin-top: 25rpx;
  text-align: center;
  line-height: 90rpx;
  border-radius: 10rpx;
  font-size:36rpx;
  color: #fff;
}