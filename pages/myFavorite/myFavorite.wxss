/* pages/myFavorite/myFavorite.wxss */
.tabs{
  margin-top: 30rpx;
}
.tab{
  width: 500rpx;
  display: flex;
  justify-content: space-between;
}
.tab_item{
  color: #5c5c5c;
  font-size: 32rpx;
  
}
.selected{
  border-bottom: 3px solid #3BA8E4;
  font-size: 38rpx;
  padding-bottom: 10rpx;
  border-radius: 3rpx;
  font-weight: bold;
  color: #3d3d3d;
}

.item_detail{
  margin-top: 50rpx;
}


.row{
  height: 200rpx;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  margin: 20rpx 0;
}
.row .col{
  width: 440rpx;
  height: 170rpx;
  padding: 10rpx 0 15rpx 0;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 0;
  border-bottom: 1px solid rgb(228, 228, 228);
}
.row .img{
  width: 240rpx;
  height: 180rpx;
  position: relative;
}
.row .img view{
  position: absolute;
  top: 0;
  border-bottom-right-radius: 20rpx;
  border-top-left-radius: 20rpx;
  background: rgba(24, 24, 24, 0.5);
  color: rgb(230, 230, 230);
  font-size: 24rpx;
  text-align: center;
  padding: 5rpx 20rpx;
}

.row image{
  width: 240rpx;
  height: 180rpx;
}
.row .bg{
  padding: 0;
  display: flex;
  justify-content: space-between;
}
.font1{
  font-size: 26rpx;
  color: #3d3d3d;
  overflow:hidden;
  text-overflow:ellipsis;
  word-break: normal;
  font-weight: bold;
  height: 76rpx;
  line-height: 38rpx
   
}
.font2{
  font-size: 28rpx;
  color:#999999;
}
.font2 text{
  font-size: 36rpx;
  font-weight: bold;
  color:#F99B00;
}

.font3{
  font-size: 26rpx;
  color:rgba(153, 153, 153, 1);
  text-decoration:line-through;
  margin-left: 10rpx;
}
.font4{
  font-size: 26rpx;
  color:rgba(153, 153, 153, 1);
  margin-top: 10rpx;
}
.vip view{
  border-radius: 10rpx;
  padding: 0 0 6rpx 9rpx;
  color: #F99B00;
  font-size: 22rpx;
  border: 1px solid #F99B00;
  width: 130rpx;
  height: 24rpx;
  margin-top: 5rpx;
}
.vip image{
  width: 20rpx;
  height: 16rpx;
}
