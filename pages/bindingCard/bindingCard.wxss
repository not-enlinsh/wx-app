}

/* 遮罩层 */
.mask{
    width: 100%;
    height: 100%;
    position: fixed;
    top: 0;
    left: 0;
    background: #000;
    z-index: 9000;
    opacity: 0.5;
}
  
/* 弹出层 */
.modalDlg{
    width: 600rpx;
    height: 430rpx;
    position: fixed;
    left: 0;
    right: 0;
    z-index: 9999;
    margin: 0 auto;
    background-color: #fff;
    border-radius:20rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    overflow: hidden;
}
.modalBody{
  font-size: 42rpx;
  font-weight: 600;
  color: #666666;
  display: flex;
  justify-content: center;
  align-items: center;
}
.modalBody view{
  margin-top: 130rpx;
}
.modalFooter{
  font-size: 36rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-top: 1px solid #ccc;
}
.modalFooter view{
  width: 300rpx;
  height: 100rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}
.backIndex{
  color: rgb(143, 143, 143);
}
.check{
  color: #fff;
  background: #F99B00;
}