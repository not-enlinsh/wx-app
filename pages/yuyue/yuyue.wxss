/* pages/yuyue/yuyue.wxss */
.top-2{
  background-color: #fff;
  border-radius: 10rpx;
  padding: 35rpx;
  margin-top: 25rpx;
}
.title-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 30rpx;
}
.shu{
  width: 8rpx;
  height: 24rpx;
  border-radius: 4rpx;
  background-color: rgba(59, 168, 228, 1);
  margin-right: 15rpx;
}
.title-box .name{
  font-weight: bold;
  font-size: 36rpx;
  color: #3d3d3d;
}

.title-box .name text{
  font-weight:400;
  font-size: 25rpx;
}
.p-box{
  display: flex;
  flex-wrap: wrap;
}
.p-box .list{
  line-height: 50rpx;
  padding: 0 33rpx;
  background-color: rgba(235, 235, 235, 1);
  color: rgba(51, 51, 51, 1);
  border-radius: 25rpx;
  margin-right: 37rpx;
  margin-bottom: 32rpx;
}
.t-list{
  color: rgba(153, 153, 153, 1);
  font-size: 24rpx;
  line-height:36rpx;
}
.phone{
  color: rgba(59, 168, 228, 1);
  display: flex;
  align-items: center;
  font-size: 32rpx;
  line-height: 36rpx;
}
.phone image{
  margin-right: 20rpx;
}

.time{
  width: 140rpx;
  height: 80rpx;
  font-size: 20rpx;
  text-align: center;
  border:1px solid rgba(204,204,204,1);
  margin-right: 18rpx;
  border-radius:10rpx;
  display: flex;
  color: rgba(51, 51, 51, 1);
  justify-content: center;
  align-content: center;
  flex-direction: column;
  margin-bottom: 15rpx;
}
.time:last-child{
  margin-right: 0rpx;
}

.tijiao{
  width:100%;
  height:100rpx;
  background:rgba(249,155,0,1);
  border-radius:20rpx;
  font-size:36rpx;
  margin-top: 50rpx;
  color:rgba(255,255,255,1);
  line-height: 100rpx;
  text-align: center;
}
.jg1{
  font-size:60rpx;
  font-family:PingFang;
  font-weight:bold;
  color:rgba(249,155,0,1);
  display: flex;
  justify-content: center;
  align-items: center;
}
.jg1 text{
  font-size:24rpx;
  color:rgba(153,153,153,1);
  text-decoration:line-through;
}
.stime{
  color:rgba(255,255,255,1);
  background:rgba(59,168,228,1);
}
.p-box .list.jgxz{
  background:rgba(59,168,228,1);
  color: #fff;
}
.i-list{
  margin: 12rpx 0;
  width: 100%;
}
.i-list input{
  width: 100%;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1px solid #ededed;
}

.checkbox-3{
  margin-right: 20rpx;
  margin-bottom: 20rpx;
}